@model IEnumerable<UniversidadLosPatitos.Abstracciones.ModelosUI.CursosDto>

@{
    ViewBag.Title = "ListaCursos";
}

<h2>ListaCursos</h2>

<p>
    @Html.ActionLink("Crear Curso", "RegistrarCurso")
</p>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoDelCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoDelGrupo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadEstudiantesPermitidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadEstudiantesMatriculados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cuatrimestre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaDelCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDeRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDeModificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoDelCurso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCurso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Carrera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoDelGrupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadEstudiantesPermitidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadEstudiantesMatriculados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modalidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profesor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cuatrimestre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaDelCurso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDeRegistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDeModificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>
